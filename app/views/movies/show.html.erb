
<ul>
<li><%= @movie.title%></li>
<li><%= @movie.director %></li>
</ul><%= form_with(model: [@movie, @movie.reviews.build], local: true) do |form| %>
    
  <p>
    <%= form.label :reviewer %><br>
    <%= form.text_field :reviewer %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.label :rating %><br>
    <%= form.number_field :rating %>
  </p>
  <p>
    <%= form.submit %>
  </p>
  <%end%>
<h4>Reviews </h4>
  <% @movie.reviews.each do |review| %>
    <p>Reviewer: <%=review.reviewer %></p>
    <p>Review: <%=review.body%></p>
    <p>Rating: <%=review.rating%></p>
<% end %>

<p><%= link_to 'View All Movie', movies_path %></p>